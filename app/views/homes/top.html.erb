<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>
<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h1>welcome to <i class="fas fa-book"></i>Bookers!!</h1>
      <p>In <i class="fas fa-book"></i><strong>Bookres</strong>,</p>
      <p>you can share and exchange your opinions , inpressions , and emotions</p>
      <p>about various books!</p>
      <div class="btn-wrapper col-10 mx-auto">
        <div class="row">
          <button type="button" class="btn btn-info btn-sm btn-block mb-3">
            <%= link_to "Log in", new_user_session_path, :style=>"color:white;" %>
          </button>
        </div>
        <div class="row">
          <button type="button" class="btn btn-success btn-sm btn-block mb-3" role="button">
            <%= link_to "Sign Up", new_user_registration_path, :style=>"color:white;" %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
