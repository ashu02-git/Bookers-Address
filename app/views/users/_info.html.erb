<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size:'100x100', format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= user.introduction %></td>
            </tr>
          </tbody>
        </table>
    <div class="button">
      <% if user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
    <% end %>