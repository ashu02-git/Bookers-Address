<div>エラー文章</div>
<div class="container x-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div class="plofile-box">
        <h2>User info</h1>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <div class="button">
          <% if @user.id == current_user.id %>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
          <% end %>
        </div>
      </div>
      <div class="new-box">
        <h2>New book</h2>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
    </div>
  </div>
</div>