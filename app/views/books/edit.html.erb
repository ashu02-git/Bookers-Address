<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <div class="edit-item">
          <label for="title">Title</label><br />
          <%= f.text_field :title, autofocus: true %><br />
        </div>
        <div class="edit-item">
          <laber class="opinion">Opinion</laber><br />
          <%=  f.text_field :opinion, autofocus: true %><br />
        </div>
        <div class="edit-item">
          <%= f.submit 'Update Book' %>
        </div>
      <% end %>

      <%= link_to 'Show', book_path %>
      <span>|</span>
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>