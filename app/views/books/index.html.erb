<div class="container x-5 px-sm-0">
  <div id="alert">
    <%= render 'users/alert', model: @book %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="plofile-box">
        <%= render 'users/info', user: @user  %>
      </div>
      <div class="new-box">
        <%= render 'books/newbook', newbook: @book %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= render 'books/booklist', books: @books %>
    </div>
  </div>
</div>