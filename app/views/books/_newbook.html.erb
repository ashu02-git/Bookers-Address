<h2>New book</h2>
<%= form_with model:newbook, url:'/books', local:true do |f| %>
  <div class="new-item">
    <label for='title'>Title</label><br />
    <%= f.text_field :title %>
  </div>
  <div class="new-item">
    <label for='opinion'>Opinion</label><br />
    <%= f.text_field :opinion %>
  </div>
  <div class="new-item">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>