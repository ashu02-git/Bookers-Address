<h2>New book</h2>
<%= form_with model:newbook, url:'/books', local:true do |f| %>
  <div class="form-group">
    <label for='title'>Title</label><br />
    <input class="form-control book_title" type="text" name="book[title]" id="book_title">
  </div>
  <div class="form-group">
    <label for='opinion'>Opinion</label><br />
    <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success">Create Book</button>
  </div>
<% end %>