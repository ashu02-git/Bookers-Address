<h2>New book</h2>
<%= form_with model:newbook, url:'/books', local:true do |f| %>
  <div class="form-group">
    <label for='title'>Title</label><br />
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for='opinion'>Opinion</label><br />
    <%= f.text_area :opinion %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success">Create Book</button>
  </div>
<% end %>